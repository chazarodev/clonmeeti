<main class="asistentes contenedor">
    <h1><%= nombrePagina %></h1>
    <div class="informacion-usuario">
        <div class="imagen">
            <% if (usuario.imagen) { %> 
                <img src="/uploads/perfiles/<%= usuario.imagen %>" alt="">
            <% } %>
        </div>
        <div class="texto">
            <p><%- usuario.descripcion %></p>
        </div>
    </div><!--Info-usuario-->
    <div class="grupos-usuario">
        <h2>Grupos de: <%= usuario.nombre %></h2>
        <% if (grupos.length > 0) { %> 
            <ul class="lista-grupos">
                <% grupos.forEach(grupo => { %>
                    <li>
                        <div class="imagen">
                            <% if (grupo.imagen) { %> 
                                <img src="/uploads/grupos/<%= grupo.imagen %>" alt="Imagen Grupo">
                            <% } else { %> 
                                <img src="/img/meeti.jpg" alt="Imagen Meeti">
                            <% } %>
                        </div>
                        <div class="texto">
                            <a href="/grupos/<%= grupo.id %>">
                                <h3><%= grupo.nombre %></h3>
                            </a>
                        </div>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>
</main>